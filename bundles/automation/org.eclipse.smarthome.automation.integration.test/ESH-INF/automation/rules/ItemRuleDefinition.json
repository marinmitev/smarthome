[  
  {  
    "name": "ItemSampleRule",
    "tags": [  
      "sample",
	  "item",
	  "jsonTest",
      "rule"
    ],
    "config": {},
    "description": "Sample Rule for items definition.",
    "on": [  
      {  
        "id": "ItemStateChangeTriggerID",
        "type": "GenericEventTrigger",
		"config":{
			"eventSource":"myMotionItem",
			"eventTopic":"smarthome/items/*",
			"eventTypes":"ItemStateEvent"
		}
      }
    ],
    "if": [
      {
        "id": "ItemStateConditionID",
        "type": "EventCondition",
        "config": {
          "topic": "smarthome/items/myMotionItem/state",
		  "payload":".*ON.*"
        },
		"input":{
			"topic":"ItemStateChangeTriggerID.topic",
			"source":"ItemStateChangeTriggerID.source",
			"payload":"ItemStateChangeTriggerID.payload"
		}
	  }
    ],
    "then": [
      {  
        "id": "ItemPostCommandActionID",
        "type": "ItemPostCommandAction",
        "config": {  
          "itemName": "myLampItem",
		  "command": "ON"
        }
      }
    ]
  },
  {  
    "name": "ItemCustomRule",
    "tags": [  
      "sample",
	  "item",
	  "custom",
      "rule"
    ],
    "config": {},
    "description": "Sample Custom Rule for items definition.",
    "on": [  
      {  
        "id": "ItemStateChangeTriggerID2",
        "type": "GenericEventTrigger:Custom1",
		"config":{
			"eventSource":"myMotionItem11",
			"eventTopic":"smarthome/items/*",
			"eventTypes":"ItemStateEvent"
		}
      }
    ],
    "if": [
      {
        "id": "ItemStateConditionID2",
        "type": "EventCondition",
        "config": {
          "topic": "smarthome/items/myMotionItem11/state",
		  "payload":".*ON.*"
        },
		"input":{
			"topic":"ItemStateChangeTriggerID2.customTriggerTopic",
			"source":"ItemStateChangeTriggerID2.customTriggerOutputSource",
			"payload":"ItemStateChangeTriggerID2.customTriggerOutputPayload"
		}
	  }
    ],
    "then": [
      {  
        "id": "ItemPostCommandActionID1",
        "type": "ItemPostCommandAction",
        "config": {  
          "itemName": "myLampItem",
		  "command": "OFF"
        }
      },
      {  
        "id": "ItemPostCommandActionID2",
        "type": "ItemPostCommandAction",
        "config": {  
          "itemName": "myLampItem11",
		  "command": "OFF"
        }
      },
      {  
        "id": "ItemPostCommandActionID3",
        "type": "ItemPostCommandAction:Custom1",
        "config": {  
		  "customItemCommand": "ON"
        }
      },
      {  
        "id": "ItemPostCommandActionID4",
        "type": "ItemPostCommandAction:Custom2",
        "config": {  
		  "customItemCommand": "OFF"
        },
        "input": {  
          "customActionInput": "ItemStateChangeTriggerID2.customTriggerOutputSource"
        }
      }
    ]
  }
]