{  
  "conditions":{
	  "ItemStateCondition":{
		  "label": "Item state condition",
		  "description": "compares the items current state with the given",
		  "config":{
			  "operator": {
				  "type":"TEXT",
				  "description":"the compare operator (one of =,<,>,!=)",
				  "required":true
			  },
			  "itemName":{
				  "type":"TEXT",
				  "description":"the name of the Item",
				  "required":true
			  },
			  "state":{
				  "type":"TEXT",
				  "description":"the state to be compared with",
				  "required":true
			  }
		  }
	  },
	  "EventCondition":{
		  "label":"StateCondition",
		  "description":"checks if the State matches",
		  "config":{
			  "topic":{
				  "type":"TEXT",
				  "description":"topic should match",
				  "required":false
			  },
			  "eventType":{
				  "type":"TEXT",
				  "description":"eventType should match",
				  "required":false
			  },
			  "source":{
				  "type":"TEXT",
				  "description":"source should match",
				  "required":false
			  },"payload":{
				  "type":"TEXT",
				  "description":"payload should match",
				  "required":false
			  }
		  },
	      "input": {
            "source": {
              "type": "java.lang.String",
              "label": "Source",
              "description": "The name of the events source.",
			  "required":false
            },
            "payload": {
              "type": "java.lang.String",
              "label": "Payload",
              "description": "The payload of the event",
			  "required":false
            },
            "type": {
              "type": "java.lang.String",
              "label": "EventType",
              "description": "The type of the Event.",
			  "required":false
            },
            "topic": {
              "type": "java.lang.String",
              "label": "topic",
              "description": "The Topic of the event",
			  "required":false
            }
	      }
		  
	  	
	  }
  },
  "actions":{
	  "ItemPostCommandAction":{
		  "label":"ItemPostCommandAction",
		  "description":"posts commands on items",
		  "config":{
			  "itemName":{
				  "type":"TEXT",
				  "description":"the name of the item to post the command for",
				  "required":true
			  },
			  "command":{
				  "type":"TEXT",
				  "description":"the command to be posted",
				  "required":true
			  }
		  }
	  }
  }
}
